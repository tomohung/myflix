%section.advanced_search.container
  = form_tag advanced_search_videos_path, method: :get, class: 'col-md-5 navbar-form' do 
    .form-group
      = text_field_tag :query, nil, class: 'input form-control', placeholder: 'Search for videos here.'
    = submit_tag 'Search', class: 'btn btn-default'

  
- if @results
  %h2.results_count Result: #{@results.size} videos found
  .videos.row
    - @results.each do |video|
      .video.col-sm-2
        %header
          %h3= video.title
          %span= video.rating
          %p= video.description
        = link_to video_path(video) do
          %img{src: video.small_cover_url}

